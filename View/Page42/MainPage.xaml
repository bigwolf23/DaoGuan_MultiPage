        </Button>
        <Button x:Name="DownPage_Button" Content="" Height="98" Margin="0,1177,54,0" VerticalAlignment="Top" RenderTransformOrigin="0.473,0.08" Click="DownPage_Button_Click" Visibility="Visible" HorizontalAlignment="Right" Width="217">
            <Button.Background>
                <ImageBrush ImageSource="pack://SiteOfOrigin:,,,/Res/Page42/btn03.png" Stretch="Fill"/>
            </Button.Background>
        </Button>
