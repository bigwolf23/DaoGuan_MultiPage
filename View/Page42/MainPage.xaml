                                       ScrollViewer.VerticalScrollBarVisibility="Auto" 
                                       Margin="0,0,0,0" 
                                       TextAlignment="Left" 
                                       VerticalAlignment="Top" 
                                       Width="588" Height="Auto" 
                                       TextWrapping="Wrap" 
                                       FontFamily="Microsoft YaHei" 
                                       FontSize="20" Background="Transparent" >
                                </TextBlock>
                                <TextBlock Text="{Binding MonkInfoIndex}" 
                                           Margin="0,0,0,0" 
                                           TextTrimming="CharacterEllipsis" 
                                           TextAlignment="Left" 
                                           VerticalAlignment="Top" 
                                           Width="588" 
                                           TextWrapping="Wrap" 
                                           FontFamily="Microsoft YaHei" 
                                           FontSize="20" Background="Transparent" Visibility="Hidden"></TextBlock>
                            </StackPanel>

                        </ScrollViewer>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ListView Name="ActivityInfo_ListView" Visibility="Visible" 
                  ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                  FontFamily="Microsoft YaHei" 
                  FontSize="20" BorderThickness="0" 
                  Background="Transparent" Margin="129,624,0,0" 
                  ScrollViewer.HorizontalScrollBarVisibility="Hidden" 
