            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1.097" ScaleX="0.911"/>
                    <SkewTransform AngleX="0.071"/>
                    <RotateTransform Angle="-89.583"/>
                    <TranslateTransform/>
