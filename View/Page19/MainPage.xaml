               VerticalAlignment="Center" 
               ScrollViewer.VerticalScrollBarVisibility="Disabled" 
               FontWeight="Medium" 
               TextOptions.TextHintingMode="Fixed" 
               FontFamily="Microsoft YaHei" FontSize="21" 
               Foreground="Black" VerticalContentAlignment="Center"
