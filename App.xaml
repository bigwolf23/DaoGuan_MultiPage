<Application x:Class="RenJiCaoZuo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             ShutdownMode="OnMainWindowClose" Startup ="Application_Startup" >
    <!--StartupUri="View/MainWindow.xaml" StartupUri="App.xaml"-->
    <Application.Resources>
        <ResourceDictionary>

            <!--#加字体名，不是字体文件名。字体名打开字体文件可得-->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <FontFamily x:Key="HWXK">
                        pack://application:,,,/Res/FontFamily/#方正行楷简体
                    </FontFamily>
                </ResourceDictionary>
                <ResourceDictionary Source="/View/Styles/PasswordBoxStyle.xaml"/>
                <ResourceDictionary Source="/View/Styles/ButtonStyle.xaml"/>
                <ResourceDictionary Source="/View/Styles/Font.xaml"/>
                <ResourceDictionary Source="/View/Styles/ListViewStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
